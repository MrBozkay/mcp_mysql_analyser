{
  "name": "@mrbozkay/mcp_mysql_analyser",
  "version": "1.1.0",
  "description": "Multi-platform MCP server for MySQL database analysis with natural language support for Kiro IDE, VSCode, Claude Desktop, Cursor, Gemini and other MCP clients",
  "main": "dist/server.js",
  "bin": {
    "mcp-mysql-analyzer": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "setup-mcp": "tsx src/setup-mcp.ts",
    "prepublishOnly": "npm run build",
    "postinstall": "echo 'MCP MySQL Analyzer installed successfully! Use: mcp-mysql-analyzer --help'"
  },
  "keywords": [
    "mcp",
    "mysql",
    "analytics",
    "profiling",
    "schema",
    "discovery",
    "cli",
    "global",
    "kiro",
    "claude",
    "vscode",
    "cursor",
    "gemini",
    "ai",
    "llm",
    "database",
    "natural-language",
    "multi-platform"
  ],
  "author": "MrBozkay <mrbozkay@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrBozkay/mcp_mysql_analyser.git"
  },
  "homepage": "https://github.com/MrBozkay/mcp_mysql_analyser#readme",
  "bugs": {
    "url": "https://github.com/MrBozkay/mcp_mysql_analyser/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "install-global.ps1",
    "install-global.sh"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "dotenv": "^17.2.3",
    "mysql2": "^3.15.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "cross-env": "^10.1.0",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
